{
  "name": "Moverio Connector",
  "short_name": "Moverio Connector",
  "version": "1.0.0",
  "minimum_chrome_version": "10.0",
  "description": "WebXR Moverio Connector",
  "homepage_url": "https://github.com/wrc4/WebXR-Moverio-extension",
  "author": "Yilei Su",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": ["src/extension/background.js"]
  },
  "permissions": [
    "file://*/*",
    "http://*/*",
    "https://*/*",
    "nativeMessaging"
  ],
  "content_scripts": [{
    "matches": [
      "file://*/*",
      "http://*/*",
      "https://*/*"
    ],
    "js": [
      "src/extension/content-script.js"
    ],
    "run_at": "document_start",
    "all_frames": true
  }],
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Moverio Connector"
  },
  "manifest_version": 2
}
